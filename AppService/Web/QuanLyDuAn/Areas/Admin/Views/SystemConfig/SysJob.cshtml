@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="popup-main-upload"></div>
<div id="popup-register"></div>
<div class="row">
    <div class="col-12">
        <div id="container" class="elevation-2"></div>
    </div>
</div>

@section script{
    <script src="~/Scripts/page/hethong.js"></script>
    <script>

        var WIDTH_CONTAINER = $("#container").width();
        //--------------------CURD------------------------------
        var ACTION_SYSJOB = "/SysJob";
        var ACTION_FILESATTACHMENT = "/FilesAttachment";
        //-------------------- CustomStore -------------------------
        let customStore = () => new DevExpress.data.DataSource({
            store: new DevExpress.data.CustomStore({
                key: "id",
                load: (values) => ajax_read(ACTION_SYSJOB, values),
                insert: (values) => ajax_insert(URL_API_PM_CMD + ACTION_SYSJOB, values),
                update: (key, values) => ajax_update(URL_API_PM_CMD + ACTION_SYSJOB, key, values),
                remove: (key) => ajax_delete(URL_API_PM_CMD + ACTION_SYSJOB, key),
            }),
        });
        let customStore_FilesAttachment = () => new DevExpress.data.DataSource({
            store: new DevExpress.data.CustomStore({
                key: "id",
                load: (values) => ajax_read(ACTION_FILESATTACHMENT, values),
                //insert: (values) => ajax_insert(URL_API_PM_CMD + ACTION_FILESATTACHMENT, values),
                //update: (key, values) => ajax_update(URL_API_PM_CMD + ACTION_FILESATTACHMENT, key, values),
                //remove: (key) => ajax_delete(URL_API_PM_CMD + ACTION_FILESATTACHMENT, key),
            }),
            filter: ["ownerByTable", "=", "SysJob"],
        });

        $(function () {
            loadData();
        });

        let loadData = () => {
            $("#container").dxDataGrid({
                height: heightScreen,
                dataSource: customStore(),
                remoteOperations: true,
                showBorders: false,
                filterRow: { visible: true },
                showColumnHeaders: true,
                showColumnLines: false,
                hoverStateEnabled: true,
                showRowLines: true,
                columnAutoWidth: true,
                wordWrapEnabled: true,
                rowAlternationEnabled: true,
                columns: [
                    {
                        dataField: "jobName",
                        caption: "Tên công việc",
                        validationRules: [{ type: "required" }],
                    },
                    {
                        dataField: "templateId",
                        caption: "Mẫu báo cáo",
                        dataType: "number",
                        lookup: {
                            dataSource: customStore_FilesAttachment(),
                            valueExpr: "id",
                            displayExpr: "displayName",
                        },
                        editorType: "dxLookup",
                        editorOptions: {
                            dataSource: customStore_FilesAttachment(),
                            valueExpr: "id", displayExpr: "displayName",
                            placeholder: "Vui lòng chọn...",
                            searchEnabled: true,
                            showClearButton: true,
                            itemTemplate: function (data) {
                                return $("<div>").append($("<b>").append(data.code).addClass("mr-1"), $("<em>").append(data.title));
                            },
                        },
                        validationRules: [{ type: "required" }],
                    },
                    {
                        dataField: "nameDataBase",
                        caption: "NameDataBase",
                        dataType: "string",
                    },
                    {
                        dataField: "nameStoreProce",
                        caption: "NameStoreProce",
                        dataType: "string",
                    },
                    {
                        dataField: "connStringHash",
                        caption: "ConnStringHash",
                        dataType: "string",
                    },
                    {
                        dataField: "salt",
                        caption: "Salt",
                        dataType: "string",
                    },
                    {
                        dataField: "startTime",
                        caption: "StartTime",
                    },
                    //{
                    //    dataField: "endTime",
                    //    caption: "EndTime",
                    //    dataType: "string",
                    //},
                    {
                        dataField: "startDate",
                        caption: "StartDate",
                        dataType: "dateTime",
                    },
                    {
                        dataField: "endDate",
                        caption: "EndDate",
                        dataType: "dateTime",
                    },
                    {
                        dataField: "firstDate",
                        caption: "FirstDate",
                        dataType: "dateTime",
                    },
                    {
                        dataField: "lastDate",
                        caption: "LastDate",
                        dataType: "dateTime",
                    },
                    {
                        dataField: "nextDate",
                        caption: "NextDate",
                        dataType: "dateTime",
                    },
                    {
                        dataField: "times",
                        caption: "Times",
                        dataType: "number",
                    },
                    {
                        dataField: "unit",
                        caption: "Unit",
                        dataType: "number",
                    },
                    {
                        dataField: "stepTime",
                        caption: "StepTime",
                        dataType: "number",
                    },
                    {
                        dataField: "isTemplate",
                        caption: "IsTemplate",
                        dataType: "bool",
                    },
                ],
                paging: { enabled: true, pageSize: 20 },
                pager: {
                    showPageSizeSelector: true,
                    allowedPageSizes: [10, 20, 40],
                    showInfo: true,
                },
                searchPanel: {
                    highlightCaseSensitive: true,
                    highlightSearchText: true,
                    searchVisibleColumnsOnly: true,
                    visible: WIDTH_CONTAINER > 350
                },
                editing: {
                    //allowAdding: true,
                    //allowUpdating: true,
                    //allowDeleting: true,
                    mode: "popup",
                    useIcons: true,
                    confirmDelete: true,
                    popup: {
                        width: 600, height: "auto",
                        showTitle: true, title: "Trình duyệt",
                        closeOnOutsideClick: false, showCloseButton: true,
                    },
                    form: {
                        labelLocation: "left",
                        itemType: "group",
                        colCount: 12,
                        showRequiredMark: true,
                        requiredMark: "(*)",
                        items: [
                        ],
                    },
                },
                onToolbarPreparing: function (e) {
                    var container = e.component;
                    e.toolbarOptions.items.unshift(
                        {
                            location: "after",
                            widget: "dxButton",
                            options: {
                                icon: "refresh",
                                stylingMode: "filled",
                                type: "default",
                                onClick: () => container.refresh()
                            }
                        },
                    )
                },
                onInitNewRow: (e) => {
                    e.data.isActive = true;
                    e.data.isVisible = true;
                },
                onCellPrepared: (e) => {
                    if (e.rowType == "data" && e.columnIndex == 1)
                        e.cellElement.find('.dx-treelist-empty-space').toggleClass("dx-treelist-collapsed", e.data.chilCount > 0)
                },
                //onCellClick: function (e) {
                //    if (e.column.dataField === "noAttachment") {
                //        loadUpload("DocumentReleased", e.row.data, false);
                //    }
                //},
                selection: {
                    mode: "single"
                },
                onContentReady: (e) => {
                    var container = e.component;
                    $("#action-add").dxSpeedDialAction({
                        index: 1, icon: "fas fa-plus",
                        label: "Thêm mới",
                        visible: PermitInAction["insert"],
                        onClick: () => {
                            callPopup(
                                "THÊM MỚI PHÁT HÀNH",
                                "/Admin/SystemConfig/_SysJobAdd",
                                ($(window).width() > 767 ? "50%" : "80%"),
                                container
                            );
                        }
                    }).dxSpeedDialAction("instance");
                    DevExpress.config({
                        floatingActionButtonConfig: {
                            icon: "rowfield",
                            label: "Tác vụ",
                            shading: true,
                            position: {
                                of: e.element,
                                my: "right bottom",
                                at: "right bottom",
                                offset: e.component.pageCount() > 1 ? "-15 -60" : "-15 -15"
                            }
                        }
                    });
                    DevExpress.ui.repaintFloatingActionButton();
                },
                onSelectionChanged: (e) => {
                    var selectedRowData = e.selectedRowsData[0];
                    var selectedRowKey = e.selectedRowKeys[0];
                    if (selectedRowData != null && selectedRowKey != null) {
                        var data = e.component.getRowIndexByKey(selectedRowKey);

                        $("#action-update").dxSpeedDialAction({
                            index: 2, icon: "fas fa-edit", label: "Cập nhật thông tin",
                            visible: PermitInAction["update"],
                            onClick: () => e.component.editRow(data)
                        }).dxSpeedDialAction("instance");

                        $("#action-log").dxSpeedDialAction({
                            index: 4, icon: "fas fa-user", label: "Thêm người nhận",
                            onClick: () => {
                                loadAccount(selectedRowKey);
                            }
                        }).dxSpeedDialAction("instance");
                    }
                },
            });
        };
    </script>
}

