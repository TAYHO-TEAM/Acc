                            },
                            {
                                colSpan: 12,
                                dataField: "isActive",
                                label: { text: "Trạng thái" },
                                editorType: "dxSwitch",
                                editorOptions: {
                                    dataSource: listActiveStatus,
                                    valueExpr: "value",
                                    displayExpr: "text",
                                },
                            },
