                        dataType: "string",
                        alignment: "center",
                        allowEditing: true,
                    },// barCode
                    {
                        dataField: "phone",
                        allowFiltering: true,
                        caption: "Số điện thoại",
                        dataType: "string",
                        alignment: "center",
                        editorType: "dxTextBox",
                    },// addres
                    {
                        dataField: "email",
                        allowFiltering: true,
                        caption: "Email",
                        dataType: "string",
                        alignment: "center",
                    },// TaxCode
                    {
                        dataField: "sex",
                        allowFiltering: true,
                        caption: "Giới tính",
                        dataType: "string",
                        alignment: "center",
                        lookup: {
                            dataSource: Sex,
                            valueExpr: "ID",
                            displayExpr: "Name",
                        },
                        editorType: "dxLookup",
                        editorOptions: {
                            stylingMode: "filled",
                            searchEnabled: false,
