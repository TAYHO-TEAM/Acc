                    //}
                },
                columns: [
                    {
                        dataField: "code",
                        allowFiltering: true,
                        caption: "Mã",
                        dataType: "string",
                        alignment: "center",
                        readOnly: true,
                        allowEditing: false,
                    },// barCode
                    {
                        dataField: "name",
                        allowFiltering: true,
                        caption: "Tên đơn vị",
                        dataType: "string",
                        alignment: "center",
                    },// address
                    {
                        dataField: "taxCode",
