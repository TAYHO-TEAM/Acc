                                CALLPOPUP(
                                    "Phiếu bảo trì",
                                    "/VanHanh/BaoTri/_PhieuHenBaoTriCreate?id="+ e.row.data.id,
                                    ($(window).width() > 767 ? "50%" : "80%"),
                                    container
                                );
                            }
                        });

