                            index: 2, icon: "fas fa-edit",
                            label: "Tạo phiếu hẹn",
                            visible: PermitInAction["update"],
                            onClick: () => {
                                CALLPOPUP(
                                    "Phiếu bảo trì",
                                    "/VanHanh/BaoTri/_PhieuHenBaoTriCreate?id=" + selectedRowKey,
                                    ($(window).width() > 767 ? "50%" : "80%"),
                                    container
                                );
                            }
                        }).dxSpeedDialAction("instance");
                    }
                    loadData_MaintenanceLog(selectedRowKey);
                },
                onContextMenuPreparing: function (e) {
                    var container = e.component;
                    console.log(e.component);
                    $currentConstructionItemsId = e.row.data.constructionItemsId;
                    $currentMaintenanceSupplierInfoId = e.row.data.maintenanceSupplierInfoId;
                    $currentMaintenancerInfoId = e.row.data.maintenancerInfoId;
                    $currentMaintenanceLogStatus = e.row.data.status; 
                    $currentTimes = e.row.data.times;
                    if (!e.items) e.items = [];
                    if (e.target == "content" && e.rowIndex >= 0) {
                        e.items.push({
                            icon: "fas fa-clipboard-list",
                            text: (e.row.data.status >= 10 && e.row.data.status < 100)? "Cập nhật phiếu hẹn" : "Tạo phiếu hẹn",
