                },
                columns: [
                    {
                        dataField: "constructionItemsId",
                        allowFiltering: true,
                        caption: "Hệ thống",
                        dataType: "string",
                        alignment: "center",
                        lookup: {
                            dataSource: customStore_ConstructionItems,
                            valueExpr: "id",
                            displayExpr: "title",
