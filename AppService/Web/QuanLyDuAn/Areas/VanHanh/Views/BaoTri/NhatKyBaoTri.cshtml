                    {
                        dataField: "maintenanceSupplierInfoId",
                        allowFiltering: true,
                        caption: "Đơn vị BT",
                        dataType: "number",
                        alignment: "center",
                        lookup: {
                            dataSource: customStore_MaintenanceSupplierInfo().store(),
                            valueExpr: "id",
                            displayExpr: "name",
                        },
                    },// address
                    {
                        dataField: "title",
                        allowFiltering: true,
                        caption: "Tiêu đề",
                        dataType: "string",
                        alignment: "center",
